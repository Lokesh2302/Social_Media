<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= friend.username %>'s Profile</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    /* Custom CSS styles */
    body {
      background-color: #f4f7fa;
      font-family: 'Arial', sans-serif;
    }

    header {
      background-color: #3f51b5;
      color: white;
      padding: 11px 0;
      text-align: center;
    }

    header:hover {
      color: rgb(253, 228, 0);
    }

    header nav ul {
      list-style-type: none;
      padding: 0;
      text-align: center;
    }

    header nav ul li {
      display: inline-block;
      margin: 0 15px;
    }

    header nav ul li a {
      color: white;
      text-decoration: none;
      font-size: 16px;
      color: #26306b;
      text-decoration: none;
      font-size: 18px;
      padding: 10px 20px;
      background-color: #efd8f0;
      border-radius: 5px;
      display: inline-block;
    }

    header nav ul li a:hover {
      background-color: #d7e1e2;
      color: black;
    }

    .profile-header {
      text-align: center;
      margin: 20px 0;
    }

    .profile-header img {
      border-radius: 50%;
      width: 150px;
      height: 150px;
    }

    .posts {
      margin: 30px auto;
      max-width: 1200px;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }

    .post {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .post:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .post-header {
      display: flex;
      align-items: center;
    }

    .post-header img {
      border-radius: 50%;
      margin-right: 10px;
    }

    .post-meta {
      font-size: 12px;
      color: #888;
    }

    .post-image {
      width: 100%;
      height: 250px;
      object-fit: cover;
      border-radius: 8px;
      margin-top: 15px;
      cursor: pointer;
    }

    .caption {
      margin-top: 15px;
    }

    .comments {
      margin-top: 20px;
    }

    .comments h4 {
      font-size: 16px;
      font-weight: bold;
    }

    .comments p {
      margin-bottom: 5px;
    }

    .comments form textarea {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
      border-radius: 4px;
      border: 1px solid #ccc;
      font-size: 14px;
    }

    .comments form button {
      background-color: #3f51b5;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 20px;
      cursor: pointer;
      margin-top: 10px;
    }

    .comments form button:hover {
      background-color: #2c387e;
    }

    footer {
      text-align: center;
      padding: 10px;
      background-color: #3f51b5;
      color: white;
      margin-top: 40px;
    }

    @media (max-width: 768px) {
      .posts {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 480px) {
      .posts {
        grid-template-columns: 1fr;
      }
    }

    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.8);
      justify-content: center;
      align-items: center;
    }

    .modal img {
      width: 50%;
      height: auto;
    }

    .modal.active {
      display: flex;
    }

    .modal-close {
      position: absolute;
      top: 20px;
      right: 20px;
      color: white;
      font-size: 24px;
      cursor: pointer;
    }
  </style>
</head>

<body>

  <!-- Header Section -->
  <header>
    <h1> <%= friend.username %>'s Profile</h1>
    <nav>
      <ul>
        <li><a href="/profile/<%= friend.id %>">Home</a></li>
        <li><a href="/myFriends" class="add-post">My Friends</a></li>
        <li><a href="/profile/<%= currentUser.id %>/myPosts">My Posts</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
       
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>

  <!-- Profile Section -->
  <div class="profile-header">
    <img src="<%= friend.profilePic %>" alt="<%= friend.username %>'s profile picture">
    <h2><%= friend.username %></h2>
    <p>Email: <%= friend.email %></p>
    <p>Age: <%= friend.age %></p>
  </div>

  <!-- Posts Section -->
  <div class="posts">
    <% friendPosts.forEach(post => { %>
      <div class="post">
        <div class="post-header">
          <img src="<%= post.user.profilePic %>" alt="<%= post.user.username %>'s profile picture" width="40">
          <span><%= post.user.username %></span>
          <div class="post-meta">
            <span>Posted on: <%= moment(post.createdAt).format('MMMM Do YYYY, h:mm a') %></span>
          </div>
        </div>

        <!-- Post Image Section -->
        <% if (post.imageUrl) { %>
          <img src="<%= post.imageUrl %>" alt="Post image" class="post-image" onclick="openImageModal('<%= post.imageUrl %>')">
        <% } else { %>
          <p>No image for this post.</p>
        <% } %>

        <!-- Post Caption Section -->
        <div class="caption">
          <p><%= post.caption %></p>
        </div>
      </div>
    <% }) %>
    

    <% if (friendPosts.length === 0) { %>
      <p>No posts available.</p>
    <% } %>
  </div>

  <!-- Footer Section -->
  <footer>
    <p>&copy; 2023 SynarionSocialMedia. All rights reserved.</p>
  </footer>

  <!-- Modal for Enlarged Image -->
  <div id="imageModal" class="modal">
    <span class="modal-close" onclick="closeImageModal()">Ã—</span>
    <img id="modalImage" src="" alt="Enlarged Post Image">
  </div>

  <!-- jQuery and Custom Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    // Function to open image modal
    function openImageModal(imageUrl) {
      var modal = document.getElementById('imageModal');
      var modalImage = document.getElementById('modalImage');
      modalImage.src = imageUrl;
      modal.classList.add('active');
    }

    // Function to close image modal
    function closeImageModal() {
      var modal = document.getElementById('imageModal');
      modal.classList.remove('active');
    }
  </script>

</body>

</html>
