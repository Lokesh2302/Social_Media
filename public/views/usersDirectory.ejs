<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <style>
    /* Global Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      color: #333;
      line-height: 1.6;
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
      margin: 20px 0;
      color: #ffffff;
    }

    /* Upper section background color */
    .upper-section {
      background-color: #191a1c;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    /* Welcome Text */
    h1 span {
      color: white;
    }

    h1 .yellow {
      color: #f39c12; /* Yellow Color */
    }

    /* Logo and Brand Name */
    .logo {
      display: flex;
      align-items: center; /* Aligns the logo and text horizontally */
    }

    .logo h1 {
      font-size: 1.8rem;
      margin: 0 27px;
    }

    .logo-img {
      width: 79px; /* Adjust width to match second file */
      height: auto;
      margin-right: 10px;
    }

    .brand {
      color: #f39c12;
    }

    /* Choose View - Bold Text & Yellow Color */
    .view-options label {
      font-weight: bold;
      color: #f39c12;
    }

    .view-options select {
      font-size: 1rem;
      padding: 10px;
      border-radius: 5px;
      background-color: white;
      color: #333;
      border: 1px solid #ccc;
      cursor: pointer;
    }

    /* User List Styling */
    ul {
      list-style: none;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    /* List View Styling */
    .list-view li {
      display: flex;
      justify-content: space-between;
      background-color: white;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      align-items: center;
    }

    .list-view li:hover {
      transform: scale(1.02);
      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
      margin-left: 11px;
    }

    .list-view li:hover h3 {
      color: #f39c12; /* Yellow Color on Hover */
    }

    .list-view img.profile-pic {
      width: 50px;
      height: 50px;
      border-radius: 5px;
      margin-right: 57px;
    }

    /* Grid View Styling */
    .grid-view {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
      margin: 0 auto;
      padding: 20px;
    }

    .grid-view li {
      background-color: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      text-align: center;
      overflow: hidden;
    }

    .grid-view li:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
      background-color: #f39c12;
      color: white;
    }

    h3 {
      font-size: 1.5rem;
      color: #2c3e50;
    }

    p {
      font-size: 1rem;
      color: #777;
    }

    /* Profile Picture Styling */
    img.profile-pic {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      margin-top: 10px;
      transition: transform 0.3s ease;
    }

    /* Zoom Effect */
    img.profile-pic:hover {
      transform: scale(1.2);
      cursor: pointer;
    }

    /* Remove zoom effect for images in Grid View */
    .grid-view img.profile-pic {
      transform: none;
    }

    /* Image Enlargement on Click */
    .enlarged-image-container {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8);
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }

    .enlarged-image-container img {
      max-width: 90%;
      max-height: 90%;
      border-radius: 10px;
    }

    .close-btn {
      position: absolute;
      top: 20px;
      right: 20px;
      color: white;
      font-size: 1.5rem;
      background: #0c0c0c;
      border: none;
      border-radius: 50%;
      padding: 10px;
      cursor: pointer;
    }

    .close-btn:hover {
      background: #f39c12;
    }

    /* Footer Styling */
    footer {
      background-color: #2c3e50;
      color: white;
      padding: 20px;
      margin-top: 40px;
    }

    footer p {
      font-size: 1rem;
    }

    /* Link Styling */
    a {
      text-decoration: none;
      color: #f39c12;
    }

    a:hover {
      color: #e67e22;
    }

    /* Login & Register Link Styling */
    .auth-links a {
      text-decoration: none;
      padding: 10px 15px;
      background-color: transparent;
      color: #f39c12;
      border: none;
      border-radius: 5px;
      transition: color 0.9s;
    }

    .auth-links a:hover {
      background-color:   black;
      color: 
      
      white;
    }

  </style>
</head>

<body>
  <div class="upper-section">
    <!-- Logo and Brand Name -->
    <div class="logo">
      <img src="../uploads/synarionlogo.jpeg" alt="Synarion Logo" class="logo-img">
      <h1><b><span class="brand">S</span>ynar<span class="brand">i</span>on <span class="brand">S</span>oc<span class="brand">i</span>al <span class="brand">M</span>ed<span class="brand">i</span>a</b></h1>
    </div>

    <!-- Dropdown for View Options -->
    <div class="view-options">
      <label for="viewSelect">Choose view: </label>
      <select id="viewSelect" onchange="toggleView()">
        <option value="list">List View</option>
        <option value="grid">Grid View</option>
      </select>
    </div>
  </div>

  <% if (users.length > 0) { %>
    <h2> All Registered Users</h2>
    <ul id="userList" class="list-view">
      <% users.forEach(user => { %>
        <li>
          <div>
            <h3><%= user.username %></h3>
            <p>Email: <%= user.email %></p>
          </div>
          <!-- Profile Picture -->
          <img src="<%= user.profilePic %>" alt="<%= user.username %> has no profile picture currently." class="profile-pic" onclick="enlargeImage('<%= user.profilePic %>')" />
        </li>
      <% }); %>
    </ul>

    <ul id="userGrid" class="grid-view" style="display:none;">
      <% users.forEach(user => { %>
        <li>
          <div>
            <h3><%= user.username %></h3>
            <p>Email: <%= user.email %></p>
          </div>
          <!-- Profile Picture -->
          <img src="<%= user.profilePic %>" alt="<%= user.username %> has no profile picture currently." class="profile-pic" onclick="enlargeImage('<%= user.profilePic %>')" />
        </li>
      <% }); %>
    </ul>

  <% } else { %>
    <p>No users found.</p>
  <% } %>
  <br> <br> <br> <br>
  <div class="auth-links">
    <a href="/login">Login</a> | <a href="/signup">Sign Up</a>
  </div>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Synarion Social Media. All Rights Reserved.</p>
  </footer>

  <script>
    // View Toggle Functionality
    function toggleView() {
      const listView = document.getElementById("userList");
      const gridView = document.getElementById("userGrid");
      const viewSelect = document.getElementById("viewSelect");

      if (viewSelect.value === "list") {
        listView.style.display = "block";
        gridView.style.display = "none";
      } else {
        listView.style.display = "none";
        gridView.style.display = "grid";
      }
    }

    // Image Enlargement
    function enlargeImage(imageUrl) {
      const enlargedImageContainer = document.createElement('div');
      enlargedImageContainer.className = 'enlarged-image-container';
      const img = document.createElement('img');
      img.src = imageUrl;
      const closeButton = document.createElement('button');
      closeButton.className = 'close-btn';
      closeButton.textContent = 'X';

      closeButton.onclick = function () {
        enlargedImageContainer.style.display = 'none';
      };

      enlargedImageContainer.appendChild(closeButton);
      enlargedImageContainer.appendChild(img);
      document.body.appendChild(enlargedImageContainer);
      enlargedImageContainer.style.display = 'flex';
    }
  </script>
</body>

</html>
